# Development Environment Configuration
APP_ENV=development
APP_PORT=8080
APP_HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=yourpassword
DB_NAME=koperasi_dev
DB_SSL_MODE=disable
DB_TIMEZONE=Asia/Jakarta

# Cassandra Configuration
CASSANDRA_HOSTS=127.0.0.1
CASSANDRA_KEYSPACE=koperasi_analytics_dev
CASSANDRA_USERNAME=
CASSANDRA_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-development
JWT_EXPIRY=24h

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Tenant-Code

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# External Services
PAYMENT_MIDTRANS_SERVER_KEY=your-midtrans-server-key
PAYMENT_MIDTRANS_CLIENT_KEY=your-midtrans-client-key
PAYMENT_XENDIT_SECRET_KEY=your-xendit-secret-key

# Development Features
ENABLE_DEBUG=true
ENABLE_PROFILER=true
ENABLE_SWAGGER=true
ENABLE_HOT_RELOAD=true